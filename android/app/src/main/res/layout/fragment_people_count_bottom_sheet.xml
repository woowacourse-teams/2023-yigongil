<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_top_radius_20dp"
    android:backgroundTint="@color/black02_181B21"
    android:padding="16dp"
    app:behavior_draggable="false"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:id="@+id/view_create_study_people_count"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@drawable/bg_rectangle_radius_5dp"
        android:backgroundTint="@color/grey02_78808B"
        app:layout_constraintDimensionRatio="W, 10:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_people_count_bottom_sheet_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="@string/bottom_sheet_fragment_people_count_title_text"
        android:textAlignment="center"
        android:textAppearance="@style/picker_sb18"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/sp_people_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_create_study_people_count" />

    <com.created.team201.presentation.studyDetail.custom.SinglePicker
        android:id="@+id/sp_people_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:title="@string/single_picker_text_people_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_people_count_bottom_sheet_title"
        app:maxValue="8"
        app:minValue="2" />

    <TextView
        android:id="@+id/tv_people_count_bottom_sheet_btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/bg_rectangle_only_radius_10dp"
        android:backgroundTint="@color/green01_4039D353"
        android:paddingVertical="10dp"
        android:text="@string/bottom_sheet_fragment_button_name_cancel"
        android:textAlignment="center"
        android:textAppearance="@style/button_sb18"
        android:textColor="@color/white01_66FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_people_count_bottom_sheet_btn_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sp_people_count" />

    <TextView
        android:id="@+id/tv_people_count_bottom_sheet_btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/bg_rectangle_only_radius_10dp"
        android:backgroundTint="@color/green02_E639D353"
        android:paddingVertical="10dp"
        android:text="@string/bottom_sheet_fragment_button_name_save"
        android:textAlignment="center"
        android:textAppearance="@style/button_sb18"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/tv_people_count_bottom_sheet_btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_people_count_bottom_sheet_btn_cancel"
        app:layout_constraintTop_toTopOf="@id/tv_people_count_bottom_sheet_btn_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>
